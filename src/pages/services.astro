---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Services',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Services"
    title="Bring your ideas online with modern websites"
    subtitle="I create stylish, fast and functional websites tailored to your business. From personal pages and blogs to full company websites, you get a ready solution that works and attract clients."
    actions={[{ variant: 'primary', target: '_blank', text: 'Get started', href: '/' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'AstroWind Hero Image',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Explore My Web Design Services"
    subtitle="Discover our selection below to streamline and elevate your projects."
    columns={3}
    items={[
      {
        title: 'Landing Pages',
        description:
          'High-converting, single page websites designed to capture attention and drive action. Perfect for offers, ads and events.',
        icon: 'tabler:package',
      },
      {
        title: 'Website Redesign',
        description:
          'Modernize your existing site with a fresh look, improved usability and better perfomance.',
        icon: 'tabler:home-star',
      },
      {
        title: 'Multi-Page Websites',
        description: `Complete websites with multiple sections - ideal for businesses than need a strong online presence.`,
        icon: 'tabler:layout',
      },
      {
        title: 'E-commerce',
        description:
          'Online stores with product galleries, simple checkout and mobile-friendly design - ready to sell fast.',
        icon: 'tabler:shopping-cart',
      },
      {
        title: 'Blog',
        description:
          'Optimized blog layout with typography that makes content engaging and easy to read.',
        icon: 'tabler:article',
      },
      {
        title: 'Business',
        description:
          'Professional websites for startups, agencies and small businesses, built to highlight services and generate leads.',
        icon: 'tabler:building-store',
      },
      {
        title: 'Branding',
        description:
          'Single-page presentations for your brand identity - logos, visuals and marketing message in one place.',
        icon: 'tabler:arrow-big-up-lines',
      },
      {
        title: 'Figma Design',
        description: `Custom website layouts created in Figma - clean, modern and ready for development. Perfect for businesses and pesonal brands that want a professional design before coding.`,
        icon: 'tabler:paint',
      },
      {
        title: 'Support & Update',
        description:
          'After launch i can assist with updates, adding new content or making design adjustments.',
        icon: 'tabler:tie',
      },
    ]}
  />

  <!-- Content Widget **************** -->

</Layout>
